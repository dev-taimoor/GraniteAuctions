<script>
$(document).ready(function() {
    // Initially set the signs based on the initial state of the answers
    $('.question').each(function() {
        var $question = $(this);
        var $answer = $question.find('.answer');
        var $toggle = $question.find('.toggle');
        
        if ($answer.is(':visible')) {
            $toggle.text('-'); // Change to minus sign when answer is visible
        } else {
            $toggle.text('+'); // Change to plus sign when answer is hidden
        }
    });

    // Toggle answers and signs when toggle button is clicked
    $('.toggle').click(function() {
        var $toggle = $(this);
        var $question = $toggle.closest('.question');
        var $answer = $question.find('.answer');

        $answer.slideToggle(); // Toggle the answer visibility

        // Toggle the sign based on current state
        if ($toggle.text() === '+') {
            $toggle.text('-'); // Change to minus sign when answer is visible
        } else {
            $toggle.text('+'); // Change to plus sign when answer is hidden
        }
    });
});
</script>



