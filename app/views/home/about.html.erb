    width: 50%;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }

  .description-text {
    text-align: left;
    line-height: 1.3;
    font-size: 18px; 
    color: #2B4159;
  }

  .button-style {
    border-radius: 20px;
    padding: 10px 30px;
    border: none;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    background-color: #2B4159;
    color: white;
    display: inline-flex;
    align-self: baseline;
    margin-top: 10px;
    text-decoration: none;
    gap: 6px;
  }

  .button-style:hover {
    color: white;
  }

  .answer {
    display: none; /* Initially hide the answer */
  }

  .toggle {
    cursor: pointer;
    width: 50px;
    text-align: center;
  }

  .faq-item{
    width: 100%;
  }

  .question{
    width: 100%;
    padding: 1%;
    background: white;
    border-radius: 20px;
  }

  .question-style{
    font-weight: bold;
    color: #2B4159;
  }

  .hero-image{
    width: 100%;
    height: auto;
  }

  .inner-style{
    margin: 0;
  }

  .description-styling{
    width: 65%;
  }

  @media screen and (max-width: 768px) { /* Adjust the breakpoint as needed */
    .inner_box {
      width: 100%;
    }

    .toggle{
      height: 50px;
    }

    .header-wrapper{
      padding: 0;
    }

    .heading-styling{
      width: 100%;
    }

    .text-headings {
      font-size: 25px;
      font-weight: bold;
      text-align: left;
      line-height: 1.3;
      color: #2B4159;
    }

    .header-description{
      width: 100%;
    }

    .inner-style{
      margin-top: 20%;
    }

    .logo{
      display: none;
    }

    .description-styling{
      width: 100%;
    }

    .reversing{
      flex-direction: column-reverse;
    }
  }
</style>

