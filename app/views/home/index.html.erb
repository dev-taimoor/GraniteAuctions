<style>
  .inner_box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 23%;
    padding: 5%;
    text-align: center;
    background: white;
    border: none;
    border-radius: 13%;
    box-shadow: 0 4px 11px 10px rgba(0, 0, 0, 0.1);
  }

  .header-wrapper {
    display: flex;
    flex-wrap: wrap;
    background: #F4F7FE;
    padding: 4rem 5rem;
    justify-content: space-between;
    align-items: flex-start;
  }

  .header-wrapper-1 {
    display: flex;
    flex-wrap: wrap;
    background: #F4F7FE;
    justify-content: space-between;
    align-items: flex-start;
  }

  .text-headings {
    font-size: 64px;
    font-weight: bold;
    text-align: left;
    line-height: 1.3;
    color: #2B4159;
  }

  .text-headings-1 {
    font-size: 64px;
    font-weight: bold;
    text-align: left;
    line-height: 1.3;
    color: #2B4159;
  }

  .card-wrapper {
    display: flex;
    flex-wrap: wrap;
    background: #F4F7FE;
    justify-content: center;
    gap: 2%;
    padding: 4rem 5rem;
  }

  .header-description {
    display: flex;
    max-width: 414px;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }

  .header-description-1 {
    display: flex;
    width: 50%;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }

  .description-styling{
    width: 65%;
  }

  .heading-styling{
    width: 50%;
  }

  .description-text {
    text-align: left;
    line-height: 1.3;
    font-size: 18px; 
    color: #2B4159;
  }

  .button-style {
    border-radius: 20px;
    padding: 10px 30px;
    border: none;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    background-color: #2B4159;
    color: white;
    display: inline-flex;
    align-self: baseline;
    margin-top: 10px;
    text-decoration: none;
    gap: 6px;
  }

  .button-style:hover {
    color: white;
  }

  .reversing{
    align-items: center;
  }

  .map-image{
    width: 49%;
  }

  @media screen and (max-width: 768px) { /* Adjust the breakpoint as needed */
    .inner_box {
      width: 60%;
      margin: 5% 0; /* Adjust the margin for smaller screens */
    }

    .reversing{
      flex-direction: column-reverse;
    }

    .header-wrapper-1{
      padding: 0;
    }

    .header-description-1{
      width: 100%;
    }

    .description-styling{
      width: 100%;
    }

    .heading-styling{
      width: 100%;
    }

    .text-headings-1 {
      font-size: 25px;
      font-weight: bold;
      text-align: left;
      line-height: 1.3;
      color: #2B4159;
    }

    .question{
      display: flex;
      flex-direction: column;
    }

    .map-image{
      width: 100%;
      margin-bottom: 5%;
    }
  }
</style>

