<style>
  .inner_box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 23%;
    padding: 5%;
    text-align: center;
    background: white;
    border: none;
    border-radius: 13%;
    box-shadow: 0 4px 11px 10px rgba(0, 0, 0, 0.1);
  }

  .header-wrapper {
    display: flex;
    flex-wrap: wrap;
    background: #F4F7FE;
    justify-content: space-between;
    align-items: center;
  }

  .text-headings {
    font-size: 64px;
    font-weight: bold;
    text-align: left;
    line-height: 1.3;
    color: #2B4159;
  }

  .inner-style{
    margin: 0;
  }

  .card-wrapper {
    display: flex;
    flex-wrap: wrap;
    background: #F4F7FE;
    justify-content: center;
    gap: 2%;
    padding: 4rem 5rem;
  }

  .header-description {
    display: flex;
    width: 40%;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }

  .description-styling{
    width: 65%;
  }

  .heading-styling{
    width: 50%;
  }

  .hero-image{
    width: 100%;
    height: auto;
  }

  .description-text {
    text-align: left;
    line-height: 1.3;
    font-size: 18px; 
    color: #2B4159;
  }

  .button-style {
    border-radius: 20px;
    padding: 10px 30px;
    border: none;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    background-color: #2B4159;
    color: white;
    display: inline-flex;
    align-self: baseline;
    margin-top: 10px;
    text-decoration: none;
    gap: 6px;
  }

  .button-style:hover {
    color: white;
  }

  .reversing{
    align-items: center;
  }

  .map-image{
    width: 49%;
  }

  @media screen and (max-width: 768px) { /* Adjust the breakpoint as needed */
    .inner_box {
      width: 100%;
    }

    .inner-style{
      margin-top: 20%;
    }

    .reversing{
      flex-direction: column-reverse;
    }

    .header-wrapper{
      padding: 0;
    }

    .imagelogo{
      display: none;
    }

    .header-description{
      width: 100%;
    }

    .description-styling{
      width: 100%;
    }

    .heading-styling{
      width: 100%;
    }

    .text-headings{
      font-size: 25px;
      font-weight: bold;
      text-align: left;
      line-height: 1.3;
      color: #2B4159;
    }

    .question{
      display: flex;
      flex-direction: column;
    }

    .map-image{
      width: 100%;
      margin-bottom: 5%;
    }
  }
</style>

