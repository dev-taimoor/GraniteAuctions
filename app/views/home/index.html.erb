<script>
  document.addEventListener('DOMContentLoaded', function() {
    var map = L.map('map').setView([54.1786, -6.3370], 13); // Set coordinates for Newry and zoom level
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: 'Granite Auctions'
    }).addTo(map);

    L.marker([54.17, -6.33]).addTo(map)
    .bindPopup('Granite Auctions')
    .openPopup();
  });

</script>
