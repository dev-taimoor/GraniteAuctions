<style>
    table {
    border-collapse: separate;
    border-spacing: 0 10px;
    text-align: center;
    position: absolute;
    top: 28%;
  }

  table td {
    background: white;
    width: 160px;
    height: 30px;
  }

  table td:first-of-type{
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
  }

  table td:last-of-type{
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
  }

  .edit-item {
    border-radius: 20px;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    background-color: #6f8297;
    color: white;
    display: inline-flex;
    text-decoration: none;
  }
  .delete-item {
    border-radius: 20px;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    background-color: #DBE0EB;
    color: #6f8297;
    display: inline-flex;
    text-decoration: none;
  }
</style>

<table>
  <tr>
    <th>Make Or Model</th>
    <th>Reserve Price</th>
    <th>Buy Now Price</th>
    <th>Category</th>
    <th>Delivery</th>
    <th></th>
  </tr>

  

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.make_model%></td>
      <td><%= car.reserve_auction_price%></td>
      <td><%= car.buy_now_price%></td>
      <td><%= car.category.name%></td>
      <td><%= car.delivery_cost ? 'Yes' : 'No'%></td>
      <td style="display: flex; gap: 2%">
        <%= link_to "Edit", edit_car_path(car), class: "edit-item" %>
        <%= button_to "Delete", car_path(car), method: :delete, class: "delete-item", data: { confirm: "Are you sure?" } %>

      </td>
    </tr>
  <% end %>

  <%if @cars.blank? %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  <% end %>
</table>