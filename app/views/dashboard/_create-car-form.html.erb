<style>
  .custom-select {
    height: 25px; 
    width: 100%;
    border:none;
    border-radius: 25px;
    background: #F4F7FE;
  }

  .custom-select-select {
    height: 40px; 
    width: 100%;
    border:none;
    border-radius: 25px;
    background: #F4F7FE;
  }

  .file-upload-box {
    border: 2px dashed #CCCCCC;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    cursor: pointer;
    width: 80%;
  }

  .file-upload-box:hover {
    border-color: #2B4159;
  }

  .file-upload-box input[type="file"] {
    display: none;
  }
</style>

<div style="padding: 5%;">
<h1>Car Details</h1>
<%= form_with(model: @car, url: cars_path) do |form| %>

  <div class="file-upload-box">
    <label for="image" style="display: flex; align-items: center;">
      <%= image_tag("note-2.png", alt: "identification-icon", class: "logo", style: "width: 50px; height: 50px;") %>Add Car Image
      <br>
      <%= form.file_field :image, id: "image", name: "image" %>
    </label>
  </div>
  <br>

  <div>
    <%= form.label :make_model %><br>
    <%= form.text_field :make_model, class: "custom-select" %>
  </div>
  <br>
  <div>
    <%= form.label :reserve_auction_price %><br>
    <%= form.number_field :reserve_auction_price, class: "custom-select" %>
  </div>
  <br>
  <div>
    <%= form.label :buy_now_price %><br>
    <%= form.number_field :buy_now_price, class: "custom-select" %>
  </div>
  <br>
  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description , class: "custom-select" %>
  </div>
  <br>
  <div>
    <%= form.label :salvage_category_id %>
    <br>
    <%= form.collection_select(:salvage_category_id, SalvageCategory.all, :id, :name, {}, {class: "custom-select-select"})  %>
  </div>
  <br>
  <div>
    <%= form.label :category_id %>
    <br>
    <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class: "custom-select-select"})  %>
  </div>
  <br>
  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location , class: "custom-select" %>
  </div>
  <br>
  <div>
    <%= form.label :delivery_cost %><br>
    <%= form.number_field :delivery_cost, class: "custom-select" %>
  </div>
  <br>
  <br>
  <div>
    <%= form.submit 'Create Car',style: "background: #2B4159; color: white; width: 100%; border: none; border-radius: 25px; height: 40px;" %>
  </div>
<% end %>

</div>
